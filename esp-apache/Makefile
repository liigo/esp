##
##  Makefile -- Build procedure for sample esp Apache module
##  Autogenerated via ``apxs -n esp -g''.
##

builddir=.
top_srcdir=
top_builddir=/usr/share/apache2
include /usr/share/apache2/build/special.mk

#   the used tools
APXS=apxs2
APACHECTL=apache2ctl

#   additional defines, includes and libraries
#DEFS=-Dmy_define=my_value
INCLUDES=-I. -I/usr/local/apr/include/apr-1
LIBS=-L/usr/local/apr/lib/apr-1 -lapr-1 -L../lib -lesp-core

#   the default target
all: local-shared-build

#   install the shared object file into Apache 
install: install-modules

#   cleanup
clean:
	-rm -f mod_esp.o mod_esp.lo mod_esp.slo mod_esp.la 

#   simple test
test: reload
	lynx -mime_header http://localhost/esp

#   install and activate shared object by reloading Apache to
#   force a reload of the shared object file
reload: install restart

#   the general Apache start/restart/stop
#   procedures
start:
	$(APACHECTL) start
restart:
	$(APACHECTL) restart
stop:
	$(APACHECTL) stop

